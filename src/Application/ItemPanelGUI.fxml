<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="328.0" prefWidth="250.0" spacing="1.0" style="-fx-background-color: #f8f8f8; -fx-border-color: grey; -fx-border-width: 5; -fx-border-style: inset;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.ProductCardController">
   <children>
      <ImageView fx:id="productImage" fitHeight="140.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/shopping-cart.png" />
         </image>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor>
      </ImageView>
      <Label fx:id="nameLabel" alignment="TOP_LEFT" prefHeight="34.0" prefWidth="210.0" style="-fx-border-color: grey; -fx-border-width: 2;">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <Label fx:id="desLabel" alignment="TOP_LEFT" layoutX="25.0" layoutY="181.0" prefHeight="50.0" prefWidth="210.0" style="-fx-border-color: grey; -fx-border-width: 2;">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <Label fx:id="priceLabel" alignment="CENTER" layoutX="30.0" layoutY="175.0" prefHeight="30.0" prefWidth="209.0" style="-fx-border-color: grey; -fx-border-width: 2;">
         <font>
            <Font name="Arial" size="17.0" />
         </font>
      </Label>
      <Button fx:id="cartButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="32.0" prefWidth="123.0" style="-fx-background-color: #6F7A8A; -fx-background-radius: 10;" text="Add To Cart" textFill="WHITE">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="Arial Rounded MT Bold" size="13.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" />
   </padding>
</VBox>
